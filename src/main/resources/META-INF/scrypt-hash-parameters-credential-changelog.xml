<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.2.xsd">

    <changeSet author="SmartMoveSystems" id="keycloak-firebase-scrypt-1.0-b">

        <createTable tableName="SCRYPT_PARAMS_CREDENTIAL">

            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="CREDENTIAL_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey columnNames="ID" constraintName="PK_SCRYPT_PARAMS_CREDENTIAL_ID" tableName="SCRYPT_PARAMS_CREDENTIAL"/>


        <createTable tableName="SCRYPT_PARAMS_CREDENTIAL_MAPPING">

            <column name="SCRYPT_PARAMS_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="SCRYPT_PARAMS_CREDENTIAL_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex indexName="IDX_CREDENTIAL_ID" tableName="SCRYPT_PARAMS_CREDENTIAL_MAPPING">
            <column name="SCRYPT_PARAMS_CREDENTIAL_ID" type="VARCHAR(36)"/>
        </createIndex>

        <addUniqueConstraint columnNames="SCRYPT_PARAMS_CREDENTIAL_ID" constraintName="UK_CREDENTIAL_ID" tableName="SCRYPT_PARAMS_CREDENTIAL_MAPPING"/>
